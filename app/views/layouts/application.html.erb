<!DOCTYPE html>
<html>
<head>
  <title>Austsite</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body id="body_tag">

	<div id="global">
		<div class="global_container">

			<div id="header" class="main_section">
				<div class="logo">
					<%= link_to image_tag('logo.png'), root_path %>
				</div>
				<div id="navigation">
					<ul>
						<li><%= link_to 'Por quê', '#', { :scroll_to => '#features' } %></li>
						<li><%= link_to 'Documentação', '#', { :scroll_to => '#documentation' } %></li>
						<li><%= link_to 'Colabore', '#', { :scroll_to => '#collaborate' } %></li>
						<li><%= link_to 'Siga-nos', 'http://twitter.com/austcms', { :target => 'twitter' } %></li>
					</ul>
				</div>
			</div>
			<div class="view">
				<div class="view_container">
				<%= yield %>
				</div>
			</div>
			<div class="footer">
				<div class="footer_container"></div>
			</div>
		
		</div>
		
	</div>
	
	<span id="back_to_top_link"><a href="#" scroll_to="#body_tag">Voltar ao topo</a></span>
</body>
</html>